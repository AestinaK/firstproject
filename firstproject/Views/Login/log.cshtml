@model firstproject.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Simple login form</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <style>
        html {
            background-color: #56baed;
        }

        .login-page {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            border-radius: 10px;
            border: solid 1px #ccc;
            box-shadow: 1px 2px 5px rgba(0,0,0,.31);
            /*box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);*/
        }

            .form input {
                font-family: "Roboto", sans-serif;
                outline: 0;
                background: #f2f2f2;
                width: 100%;
                border: 0;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
                border-radius: 0 5px 5px 0;
                border: solid 1px #cbc9c9;
                box-shadow: 1px 2px 5px rgba(0,0,0,.09);
            }

            .form button {
                font-family: "Roboto", sans-serif;
                text-transform: uppercase;
                outline: 0;
                border-radius: 5px;
                background-color: deepskyblue;
                width: 100%;
                border: 0;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                cursor: pointer;
            }

                .form button:hover, .form button:active, .form button:focus {
                    background-color: greenyellow;
                }

            .form .message {
                margin: 15px 0 0;
                color: #b3b3b3;
                font-size: 12px;
            }

                .form .message a {
                    color: deepskyblue;
                    text-decoration: none;
                }

            .form .register-form {
                display: none;
            }

        .container {
            position: relative;
            z-index: 1;
            max-width: 300px;
            margin: 0 auto;
        }

            .container:before, .container:after {
                content: "";
                display: block;
                clear: both;
            }

            .container .info {
                margin: 50px auto;
                text-align: center;
            }

                .container .info h1 {
                    margin: 0 0 15px;
                    padding: 0;
                    font-size: 36px;
                    font-weight: 300;
                    color: #1a1a1a;
                }

                .container .info span {
                    color: #4d4d4d;
                    font-size: 12px;
                }

                    .container .info span a {
                        color: #000000;
                        text-decoration: none;
                    }

                    .container .info span .fa {
                        color: #EF3B3A;
                    }

        hr {
            color: #a9a9a9;
            opacity: 0.3;
        }

        h1 {
            padding: 10px 0;
            font-size: 20px;
            font-weight: 300;
            text-align: center;
        }

        /*#icon {*/
        /*display: inline-block;
            padding: 9.3px 15px;
            box-shadow: 1px 2px 5px rgba(0,0,0,.09);*/
        /*background-color: deepskyblue;
            color: #ffffff;
            text-align: center;
        }*/
        /* label#icon {
            margin: 0;
            border-radius: 5px 0 0 5px;
        }*/
    </style>
</head>
<body>
    <div class="login-page">
        <div class="form">
            <h1>Log In</h1>
            <form class="login-form" method="post" asp-controller="Login" asp-action="LoginCheck">
                <input type="text" name="Email" placeholder="Email Address" />
                <input type="password" name="Password" placeholder="password" />
                <button>login</button>
                <p class="message">Not registered? <a asp-controller="Signin" asp-action="sign">Create an account</a></p>
                <p class="message">Forgot Password? <a href="#">Click Here</a></p>
            </form>
        </div>
    </div>
</body>
</html>
<script>
    $('.message a').click(function () {
        $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
    });
</script>